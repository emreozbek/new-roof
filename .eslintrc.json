{
  "extends": [
    "airbnb",
    "plugin:react/recommended",
    "prettier"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "react/jsx-filename-extension": "off",
    "react/jsx-no-bind": {
      "allowBind": true
    },
    "react/forbid-prop-types": [false, ["object"]],
    "linebreak-style": 0,
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "hrefLeft", "hrefRight", "to" ],
      "aspects": [ "noHref", "invalidHref", "preferButton" ]
    }]
  }
}
